@model AzureMicroservicesSample.Web.Models.HomeIndexViewModel

<div class="jumbotron">
    <h1>Azure Microservices sample app</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Orders</h2>
        <ul>
            @foreach (var order in Model.Orders)
            {
                <li>@Html.ActionLink(order.Id.ToString(), "Index", "Orders", new { id = order.Id }, null)</li>
            }
        </ul>
        <p>
            @Html.ActionLink("New order", "NewOrder", "Orders")
        </p>
    </div>
    <div class="col-md-4">
    </div>
    <div class="col-md-4">
    </div>
</div>